{
  "openapi": "3.1.0",
  "info": {
    "title": "rozetka",
    "version": "1.0",
    "contact": {},
    "description": "Online-shopping"
  },
  "servers": [
    {
      "url": "https://pigeon-inc.stoplight.io"
    },
    {
      "url": "http://localhost:8080",
      "description": ""
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Show products",
        "tags": [],
        "operationId": "get-products",
        "description": "Show all products",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/product"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "name",
            "description": "Product name query param for searching tool"
          }
        ]
      },
      "post": {
        "summary": "Add product",
        "tags": [],
        "responses": {
          "201": {
            "description": "Created"
          }
        },
        "operationId": "post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product"
              }
            }
          }
        },
        "description": "Add product on main page"
      },
      "parameters": []
    },
    "/products/{uuid}": {
      "parameters": [
        {
          "schema": {
            "type": "integer"
          },
          "name": "uuid",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Show product info",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product"
                },
                "examples": {}
              }
            }
          }
        },
        "operationId": "get-product-productid",
        "description": "Show info about product on seperate page"
      },
      "post": {
        "summary": "Post reviews",
        "tags": [],
        "responses": {
          "201": {
            "description": "Created"
          }
        },
        "operationId": "post-product-productid",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product"
              }
            }
          }
        },
        "description": "Post reviews on product page"
      },
      "delete": {
        "summary": "Remove product info",
        "operationId": "delete-products-id",
        "responses": {
          "204": {
            "description": "No Content"
          }
        },
        "description": "Remove product info",
        "tags": []
      },
      "put": {
        "summary": "Update product info",
        "operationId": "put-products-id",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Update product info on itself page",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product"
              }
            }
          }
        },
        "tags": []
      }
    }
  },
  "components": {
    "schemas": {
      "product": {
        "title": "product",
        "type": "object",
        "x-examples": {},
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0,
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "discount": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "format": "int32"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "name",
          "quantity",
          "price"
        ]
      },
      "products": {
        "title": "products",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/product"
        }
      },
      "review": {
        "title": "review",
        "type": "object",
        "x-examples": {},
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "uuidProduct": {
            "type": "string",
            "format": "uuid"
          },
          "content": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "published": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "content",
          "published",
          "uuid",
          "uuidProduct"
        ]
      },
      "reviews": {
        "title": "reviews",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/review"
        }
      }
    },
    "securitySchemes": {}
  }
}