          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0,
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "discount": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "format": "int32"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "name",
          "quantity",
          "price"
        ]
      },
      "products": {
        "title": "products",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/product"
        }
      },
      "review": {
        "title": "review",
        "type": "object",
        "x-examples": {},
        "properties": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          },
          "uuidProduct": {
            "type": "string",
            "format": "uuid"
          },
          "content": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "published": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "content",
          "published",
          "uuid",
          "uuidProduct"
        ]
      },
      "reviews": {
        "title": "reviews",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/review"
        }
      }
